<html>
<%= render 'homes/list', homes: @homes %>
<main>
 <p id="notice"></p>
   <div class='container px-5 px-sm-0'>
    <div class='row'>
     <div class='col-md-3'>
       <%= render 'users/list', users: @users %>
     </div>
<div class='col-md-8 offeset -md-1'>
<h1>Books</h1>
 <table class='table table-hover table-inverse'>
  <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
     </tr>
  </thead>
  <tbody>
      <tr>
       <% @books.each do |book| %>
        <td><a><%= link_to "/users/" do %>
           <%= image_tag ('no_image.jpg') %></a>
           </td><% end %>
