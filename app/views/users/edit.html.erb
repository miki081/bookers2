 <main>

        <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@profile_image, local:true do |f| %>
    <div class="form-group">
     <label for="user_name">Name</label>
     <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>
    <div class="form-group">
      <label for="user_image">Image</label>
     <%= attachment_image_tag @book, :profile_image, :fill, 60, 60, format: 'jpeg' %>
    </div>
   <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <textarea class="form-control introduction" name="user[introduction]" id="user_introduction">
</textarea>
   </div>
<% end %>

