 <html>
<%= render 'homes/list', homes: @homes %>
 <main>

  <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
   <div class="field">
	<%= f.label :name %></br>
	<%= f.text_field :name, class: "name" %>
</div>

<div class="field">
	<%= f.label :image %></br>
	<%= f.attachment_field :profile_image_id, class: "profile_image_id" %>
</div>

<div class="field">
	<%= f.label :introduction %></br>
	<%= f.text_area :introduction, :maxlength => 200, class: "introduction" %>
</div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>
</main>

 <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>

</html>

