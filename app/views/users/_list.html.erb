  <h2>User info</h2>
  <table class='table'>
     <tr><%= image_tag('no_image.jpg') %></tr>
      <tr>
    	<th>name</th>
    	<th><%= @user.name %></th>
      </tr>
      <tr>
         <th>introduction</th>
         <th><%= @user.introduction %>
  <% if @user.id == current_user.id %></th>
      </tr>
  </table>
  <div class='row'></div>
  <div class="profile-container">
  <a class="profile-introduction">
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
 </div>
 <div>
  <%= link_to user_path(@user.id) do %>
    <%= attachment_image_tag @current_user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
  <% end %>
 </div>
 </table>
 <p id="notice"><%= notice %></p>


 <h2 class="mt-3">New book</h2>
 <%= form_with model:@book, local:true do |f| %>
 <div class="form-group">
  <label for="book_title">Title</label>
   <p><%= f.text_field :title %></p>
 </div>
 <div class="form-group">
   <label for="book_opinion">Opinion</label>
    <p><%= f.text_area :body %></p>
 </div>
  <div class="form-group">
    <%= f.submit 'CreateBook' %>
  </div>
 <% end %>