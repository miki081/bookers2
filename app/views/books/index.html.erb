<main>
 <p id="notice"></p>
   <div class='container px-5 px-sm-0'>
    <div class='row'>
     <div class='col-md-3'>
       <%= render 'layouts/error_messages', model: @book %>
       <%= render 'users/list', user: current_user, book: @book %>
     </div>
<div class='col-md-8 offset-md-1'>
 <h2>Books</h2>
 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
     <% @books.each do |book| %>
     <tr>
       <td><%=link_to image_tag(src= 'no_image.jpg', class: @user), user_path(book.user) %></br>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
     </tr>
     <% end %>
   </tbody>
  </table>
   </main>
    <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>

